<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".get_userdetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_height="250dp"
                android:layout_width="200dp"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_profile"
                app:tint="@color/purple_200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:padding="10dp"
                    android:text="This is your Number :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/texttheme"
                    app:layout_constraintBottom_toTopOf="@+id/hinttext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="132dp"
                    android:background="@drawable/edittext_back"
                    android:ems="10"
                    android:text="9999955555"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:selectAllOnFocus="false"
                    android:textColor="@color/purple_200"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/sendotp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.551"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:padding="10dp"
                    android:text="Enter Full Name here :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/texttheme"
                    app:layout_constraintBottom_toTopOf="@+id/hinttext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <EditText
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="132dp"
                    android:background="@drawable/edittext_back"
                    android:ems="10"
                    android:hint="Ex.. Vekariya Harshil B...."
                    android:inputType="textAutoCorrect"
                    android:padding="10dp"
                    android:selectAllOnFocus="false"
                    android:textColor="@color/purple_200"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/sendotp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.551"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:padding="10dp"
                    android:text="Enter Class Name here :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/texttheme"
                    app:layout_constraintBottom_toTopOf="@+id/hinttext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <EditText
                    android:id="@+id/classname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="132dp"
                    android:background="@drawable/edittext_back"
                    android:ems="10"
                    android:hint="Ex.. SYBCA"
                    android:inputType="textAutoCorrect"
                    android:padding="10dp"
                    android:selectAllOnFocus="false"
                    android:textColor="@color/purple_200"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/sendotp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.551"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:padding="10dp"
                    android:text="Enter Roll No :"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/texttheme"
                    app:layout_constraintBottom_toTopOf="@+id/hinttext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <EditText
                    android:id="@+id/rollno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="132dp"
                    android:background="@drawable/edittext_back"
                    android:ems="10"
                    android:hint="Ex.. 283"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:selectAllOnFocus="false"
                    android:textColor="@color/purple_200"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/sendotp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.551"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_back"
                    android:text="Submit"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.463"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>





</LinearLayout>